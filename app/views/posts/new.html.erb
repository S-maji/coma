<div class="container">
    <div class="col-md-4 col-md-offset-4">
        <h3 class="secsion-title">新規投稿</h3>
        
        <%= form_for(@post) do |f| %>
        
            <%= render 'shared/error_messages', object: f.object %>
            
            <div class="form-group">
                <%= f.label :image_1 %>  
                <%= f.file_field :image_1 %>
            </div>
            
            <div class="form-group">
                <%= f.text_field :title, autofocus: true, placeholder:"タイトル（12文字以内）", class:"form-control" %>
            </div>
          
            <div class="form-group">
                <%= f.text_field :comment, placeholder:"コメント", class:"form-control" %>
            </div>
          
            <div class="form-group">
                <%= f.label :image_2 %>  
                <%= f.file_field :image_2 %>
            </div>
            
            <div class="form-group">
                <%= f.label :image_3 %>  
                <%= f.file_field :image_3 %>
            </div>
            
            <div class="form-group">
                <%= f.submit "投稿", class:"btn btn-md btn-primary" %>
            </div>
        <% end %>
        
    </div>
</div>